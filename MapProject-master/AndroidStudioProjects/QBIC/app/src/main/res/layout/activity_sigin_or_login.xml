<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SiginOrLoginActivity">


        <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"

        >

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="58dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/fragmentSign"
                    android:translationZ="2dp"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="40dp"
                        android:text="@string/mutq"
                        app:texts="@string/mutq"
                        app:timeout="500"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        tools:ignore="MissingPrefix"/>

                <Button
                        android:text="ՄՈՒՏՔ  ԳՈՐԾԵԼ"
                        android:id="@+id/loginbt"
                        android:layout_width="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:translationZ="1dp"
                        android:layout_marginTop="250dp"
                        android:background="@drawable/button_cycle_shape"
                        android:textColor="@android:color/white"
                        tools:ignore="InvalidId,MissingConstraints"

                />
                <Button
                        android:id="@+id/signinbt"
                        android:text="ԳՐԱՆՑՎԵԼ"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints"
                        android:translationZ="1dp"
                        android:layout_marginTop="300dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_cycle_shape"
                        tools:layout_editor_absoluteY="0dp"
                        tools:layout_editor_absoluteX="16dp"
                />



                <pl.droidsonroids.gif.GifImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="350dp"
                        android:src="@drawable/dog_walker"

                />


            </FrameLayout>
            <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:theme="?attr/actionBarTheme"
                    android:minHeight="?attr/actionBarSize"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="0dp">

            </android.support.v7.widget.Toolbar>
<include
        android:visibility="gone"
        layout="@layout/activity_login"
        android:id="@+id/login_layout"
/>
  <include
          android:visibility="gone"
          layout="@layout/activity_signin"
          android:id="@+id/signin_layout"
  />

        </RelativeLayout>

</RelativeLayout>